<head>
  <title>PresentAR</title>
  <%= csrf_meta_tags %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>
  <div class="navbar navbar-default">
    <div class="container-fluid" id="navbar">
      <a href="/assets" class="navbar-brand"><%= image_tag "logo_white.png", size: '200x50' %></a>
      <button class="navbar-toggle" data-toggle="collapse" data-target="#mynavbar">
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <div class="collapse navbar-collapse" id="mynavbar">
        <ul class="nav navbar-nav navbar-right">
        <% if user_signed_in? %>
            <li class="active" id="welcome">Welcome, <%= current_user.user_name %></li>
            <li class="active"><%= link_to 'Upload File', new_asset_path %></li>
            <li class="active"><%= link_to 'My Files', assets_path %></li>
            <li class="active"><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
        <% else %>
            <li class="active"><%= link_to "Login", new_user_session_path %></li>
            <li class="active"><%= link_to "Register", new_user_registration_path %></li>
        <% end %>
        </ul>
      </div>
    </div>
  </div>
